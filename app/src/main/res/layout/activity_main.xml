<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brooksrobison.scriptref.MainActivity">

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/button"
        android:layout_below="@+id/verseET"
        android:layout_centerHorizontal="true"
        android:onClick="shareScript" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="58dp"
        android:id="@+id/verseET"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/chaptET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="74dp"
        android:id="@+id/bookET"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/chaptET"
        android:layout_alignStart="@+id/chaptET" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/chaptET"
        android:layout_marginTop="62dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookET"
        android:layout_alignLeft="@+id/verseET"
        android:layout_alignStart="@+id/verseET" />

    <TextView
        android:text="Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bookET"
        android:layout_alignStart="@+id/bookET"
        android:layout_marginTop="47dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookET"
        android:layout_alignLeft="@+id/chaptET"
        android:layout_alignStart="@+id/chaptET"
        android:layout_marginTop="32dp"
        android:id="@+id/textView9" />

    <TextView
        android:text="Verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chaptET"
        android:layout_alignLeft="@+id/verseET"
        android:layout_alignStart="@+id/verseET"
        android:layout_marginTop="28dp"
        android:id="@+id/textView10" />

</RelativeLayout>
